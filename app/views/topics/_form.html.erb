<%= simple_form_for @topic, html: { class: "form" } do |f| %>
  <%= render "common/error_messages", target: @topic %>
  <div class="form-group">
    <%= f.select :node_id, options_for_select(@nodes_select, @topic.node_id), {}, {class: "form-control select_node"} %>
    <%= f.text_field :title, class: "form-control topic_title", placeholder: "在这里填写标题" %>
  </div>

  <%= render "editor_toolbar" %>

  <div class="form-group">
    <%= f.text_area :body, class: "topic-editor form-control closewarning", rows: 20 %>
  </div>

  <div class="form-group">
    <%= f.submit t("common.save"), class: "btn btn-primary col-xs-2", 'data-disable-with' => t("common.saving") %>
  </div>
<% end %>
